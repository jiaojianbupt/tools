#!/usr/bin/expect
log_user 0
set user [exec id -un]
set ip [lindex $argv 0]

if {[regexp {10\.100\.\d+.\d+} $ip]} {
    set dev_host "10.100.6.206"
} else {
    set dev_host "10.101.6.18"
}

spawn ssh $user@$dev_host
send "kinit\r"
expect "Password"
send "$env(MAGIC_NUMBER)\r"
send "ssh root@$ip\r"
interact
